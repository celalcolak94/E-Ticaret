<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E_Ticaret</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

    <header class="p-3 bg-dark text-white">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center mb-lg-0 text-white text-decoration-none me-5">
                    <h5>E-Ticaret</h5>
                </a>

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    @if (User.IsInRole("Admin"))
                    {
                        <li>
                            <a asp-controller="Product" asp-action="Index" class="nav-link px-2 text-white">
                                Ürün Listesi
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Category" asp-action="Index" class="nav-link px-2 text-white">
                                Kategori Listesi
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Order" asp-action="Index" class="nav-link px-2 text-white">
                                Siparişler
                            </a>
                        </li>
                    }
                </ul>

                <div class="text-end">
                    <div class="btn-group dropdown">
                        <button class="btn btn-outline-light me-2 dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                            <span>@User.Identity.Name.ToUpper()</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton1">
                                                            <li>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="Index">
                                        Siparişlerim
                                    </a>
                                </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Account" asp-action="LogOut">
                                    Çıkış
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container-fliud">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <span class="text-muted">Place sticky footer content here.</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
